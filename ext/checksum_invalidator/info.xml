<?xml version="1.0"?>
<extension key="checksum_invalidator" type="module">
  <file>checksum_invalidator</file>
  <name>checksum_invalidator</name>
  <description>Provides Contact::invalidateChecksum, an API action that invalidates a contact checksum.</description>
  <license>AGPL-3.0</license>
  <authors>
    <author>
      <name>Lars Sander-Green</name>
      <email>lsandergreen@wikimedia.org</email>
      <role>Maintainer</role>
    </author>
  </authors>
  <urls>
    <url desc="Main Extension Page">https://FIXME</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2026-01-16</releaseDate>
  <version>1.0.0</version>
  <develStage>beta</develStage>
  <compatibility mode="semver">
    <comments>Semantic versioning. For example, compatibility with "6.1" implies compatibility with "6.2".</comments>
    <ver>6.8</ver>
  </compatibility>
  <php_compatibility mode="list">
    <comments>Listed versions. For example, specify both "8.1" and "8.2".</comments>
    <ver>8.0</ver>
    <ver>8.1</ver>
    <ver>8.2</ver>
    <ver>8.3</ver>
    <ver>8.4</ver>
  </php_compatibility>
  <smarty_compatibility mode="list">
    <comments>Listed versions. For example, specify both "4" and "5".</comments>
    <ver>5</ver>
  </smarty_compatibility>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/ChecksumInvalidator</namespace>
    <format>25.10.2</format>
    <angularModule>crmChecksumInvalidator</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@2.0.0</mixin>
    <mixin>scan-classes@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
    <mixin>entity-types-php@2.0.0</mixin>
  </mixins>
  <upgrader>CiviMix\Schema\ChecksumInvalidator\AutomaticUpgrader</upgrader>
</extension>
