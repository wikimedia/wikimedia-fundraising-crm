    <add>1.0</add>
  </field>
  <field>
    <name>value_1</name>
    <type>varchar</type>
    <length>255</length>
    <add>1.0</add>
  </field>
  <field>
    <name>value_2</name>
    <type>varchar</type>
    <length>255</length>
