{
    "description": "Wikimedia Foundation donor CRM",
    "name": "wikimedia/fundraising-crm",
    "authors": [
        { "name": "Elliott Eggleston" },
        { "name": "Peter Gehres" },
        { "name": "Katie Horn" },
        { "name": "Jeremy Postlethwaite" },
        { "name": "Arthur Richards" },
        { "name": "Matt Walker" },
        { "name": "Adam Roses Wight" },
        { "name": "Maggie Epps" },
        { "name": "Eileen McNaughton" },
        { "name": "Christine Stone" },
        { "name": "Jack Gleeson" },
        { "name": "Dylan Kozlowski" },
        { "name": "Damilare Adedoyin"},
        { "name": "Wenjun Fan"}
    ],
    "license": "GPL-2.0-or-later",
    "type": "project",
    "support": {
        "irc": "irc://irc.libera.chat/wikimedia-fundraising"
    },
    "require": {
        "amzn/login-and-pay-with-amazon-sdk-php": "^2.5",
        "coderkungfu/php-queue": "^1.0",
        "ext-intl": "*",
        "wikimedia/smash-pig": "v0.9.7.8",
        "phpmailer/phpmailer": "^6",
        "phpseclib/phpseclib":  "~2.0|~3",
        "predis/predis": "1.*",
        "wikimedia/composer-merge-plugin": "^2",
        "jackgleeson/stats-collector": "^1.4",
        "ext-json": "*"
    },
    "repositories": [
      {
        "type": "git",
        "url": "https://github.com/ejegg/login-and-pay-with-amazon-sdk-php"
      },
      {
        "type": "git",
        "url": "https://github.com/eileenmcnaughton/omnimail-silverpop"
      },
      {
        "type": "git",
        "url": "https://github.com/eileenmcnaughton/omnimail"
      },
      {
        "type": "git",
        "url": "https://github.com/civicrm/coder.git"
      }
    ],
    "require-dev": {
        "phpunit/phpunit": ">= 9.0",
        "seld/jsonlint": "1.11.0",
        "wikimedia/testing-access-wrapper": "^3",
        "php-parallel-lint/php-console-highlighter": "^0.5.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "drupal/coder": "dev-8.x-2.x-civi",
        "johnkary/phpunit-speedtrap": "^4.0",
        "clagiordano/phpunit-result-printer": "^3.0"
    },
    "replace": {
        "symfony/polyfill-php54": "*",
        "symfony/polyfill-php55": "*"
    },
    "scripts": {
      "test": [
        "parallel-lint -e php,module,install,inc --exclude core/packages/smarty5/vendor/symfony/polyfill-mbstring --exclude vendor --exclude core/vendor --exclude ext/org.wikimedia.omnimail/vendor .",
        "jsonlint $(find . -type f -iname \"*.json\" ! -path \"*/vendor/*\" ! -path \"*/bower*\" ! -path \"*/tests/data/*\" ! -path \"*/civicrm/*/afform*\" -printf \"%p \")"
      ],
      "civilint": "phpcs --standard=\"vendor/drupal/coder/coder_sniffer/Drupal\" --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md,yml -p",
      "fix": "phpcbf --standard=\"vendor/drupal/coder/coder_sniffer/Drupal\""
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
      "merge-plugin": {
        "include": [
          "ext/*/composer.json",
          "core/composer.json"
        ],
        "recurse": true,
        "replace": false,
        "ignore-duplicates": false,
        "merge-dev": true,
        "merge-extra": false,
        "merge-extra-deep": false,
        "merge-scripts": false,
        "merge-replace": false
      },
      "compile-whitelist": ["civicrm/composer-compile-lib"],
      "patches-comments": "These are copied from the civicrm-core composer.json - they are fairly static so can be managed manually",
      "patches": {
        "adrienrn/php-mimetyper": {
          "Update gitignore to ensure that sites that manage via git don't miss out on the important db.json file": "core/tools/patches/raw/adrienrn/php-mimetyper/15.patch",
          "Apply patch to fix php8.2 deprecation notice on dynamic property $filename": "core/tools/patches/raw/adrienrn/php-mimetyper/17.patch"
        },
        "pear/db": {
          "Ensure that error messages about MySQL-SSL connections are reported": "core/tools/patches/raw/pear/db/mysqli-ssl.patch",
          "Apply CiviCRM Customisations for the pear:db package": "core/tools/patches/raw/pear/db/pear_db_civicrm_changes.patch"
        },
        "pear/mail": {
          "Apply CiviCRM Customisations for CRM-1367 and CRM-5946": "core/tools/patches/raw/pear/mail/pear-mail.patch"
        },
        "pear/mail_mime": {
          "Apply patch for CRM-3133 wordwrap body to be 750 characters to apply with RFC 2821": "core/tools/patches/raw/pear/mail_mime/crm_3133.patch"
        },
        "pear/net_smtp": {
          "Add in CiviCRM custom error message for CRM-8744": "core/tools/patches/raw/pear/net_smtp/error-msg.patch"
        },
        "zetacomponents/mail": {
          "CiviCRM Custom Patches for ZetaCompoents mail": "core/tools/patches/raw/zetacomponents/mail/100-filename.patch",
          "CiviCRM Custom patch to fix a php8.1 issue found in CiviCRM unit tests": "core/tools/patches/raw/zetacomponents/mail/200-php-81.patch"
        }
      }
    },
    "config": {
        "platform": {
            "php": "8.2.26"
        },
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true,
            "php-http/discovery": false,
            "cweagans/composer-patches": true,
            "civicrm/composer-compile-plugin": true,
            "civicrm/composer-downloads-plugin": true
        }
    }
}
